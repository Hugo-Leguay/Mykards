    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.Name }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">Voir</a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}">Editer</a>
